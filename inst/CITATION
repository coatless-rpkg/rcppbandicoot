citHeader("To cite the 'RcppBandicoot' R package and 'Bandicoot' libray in publications, please use:")

bibentry(
  bibtype      = "Manual",
  title        = "{RcppBandicoot: 'Rcpp' Integration for the `Bandicoot` C++ GPU Accelerated Linear Algebra Library}",
  author       = c(
    as.person("James Joseph Balamuta")
  ),
  year         = 2023,
  textVersion  = paste(
    "Balamuta, J.J. (2023)",
    "RcppBandicoot: 'Rcpp' Integration for the `Bandicoot` C++ GPU Accelerated Linear Algebra Library.",
    "URL https://cran.r-project.org/package=RcppBandicoot."
  )
)

bibentry(
  bibtype      = "Article",
  title        = "{Bandicoot: C++ Library for GPU Linear Algebra and Scientific Computing}",
  author       = c(
    as.person("Ryan R. Curtin"),
    as.person("Marcus Edel"),
    as.person("Conrad Sanderson")
  ),
  journal      = "arXiv preprint arXiv:2308.03120",
  year         = "2023",
  textVersion  = paste(
    "R. Curtin, M. Edel, and C. Sanderson (2023).",
    "Bandicoot: C++ Library for GPU Linear Algebra and Scientific Computing.",
    "arXiv:2308.03120, 2023.",
    "URL https://arxiv.org/abs/2308.03120."
  )
)