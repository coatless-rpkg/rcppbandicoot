         year         = 2023,
         textVersion  = paste("Balamuta, J.J. (2023)",
                              "RcppBandicoot: 'Rcpp' Integration for the `Bandicoot` Header-Only C++ GPU Accelerated Linear Algebra Library.",
                              "URL https://cran.r-project.org/package=RcppBandicoot.")
)

